{
  "name": "builder-lang",
  "displayName": "Builder Language Support",
  "description": "Complete language support for Builder configuration files with LSP",
  "version": "2.0.3",
  "publisher": "builder",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "builder.build",
        "title": "Builder: Run Build",
        "icon": "$(tools)"
      }
    ],
    "languages": [
      {
        "id": "builder",
        "aliases": [
          "Builder",
          "builder"
        ],
        "filenames": [
          "Builderfile",
          "Builderspace"
        ],
        "extensions": [
          ".builder"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/file-icon.svg",
          "dark": "./icons/file-icon.svg"
        }
      },
      {
        "id": "builderignore",
        "aliases": [
          "Builder Ignore"
        ],
        "filenames": [
          ".builderignore"
        ],
        "icon": {
          "light": "./icons/builderignore-icon.svg",
          "dark": "./icons/builderignore-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "builder",
        "scopeName": "source.builder",
        "path": "./syntaxes/builder.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Builder",
      "properties": {
        "builder.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Builder Language Server Protocol support"
        },
        "builder.lsp.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Trace communication between VS Code and the language server"
        },
        "builder.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to builder-lsp executable (leave empty for auto-detection)"
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0"
  }
}
